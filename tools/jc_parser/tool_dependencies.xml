<tool_dependency>
    <package name="python" version="2.7">
        <repository name="package_python_2_7" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="Flex" version="3.1.2">
        <repository name="package_flex_2_5_39" owner="alveo" prior_installation_required="True"/>
