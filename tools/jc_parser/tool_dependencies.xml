   <package name="jc_parser" version="1.0">
       <install version="1.0">
          <actions>
          		<action type="download_by_url">https://github.com/IntersectAustralia/hcsvlab-galaxy/raw/hcsvlab-pyalveo/tools/jc_parser/alveo-reranking-parser-2011-12-17.tgz</action>
          		<action type="change_directory">reranking-parser</action>
          		<action type="shell_command">make</action>
          </actions>
      </install>
   </package>
   <package name="jc_parser_nltk_wrapper" version="1.0">
      <install version="1.0">
          <actions>
              <!-- install python-tk -->
              <action type="shell_command">git clone git://github.com/IntersectAustralia/jcp-nltk-wrapper.git</action>
              <action type="shell_command">sudo cp jcp-nltk-wrapper/parse/* /usr/local/lib/python2.7/dist-packages/nltk/parse</action>
