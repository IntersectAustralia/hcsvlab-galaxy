<?xml version="1.0"?>
<tool_dependency>
		<package name="mcr_installer" version="7.16">
        <repository name="package_mcr_installer_7_16" owner="alveo" prior_installation_required="True"/>
    </package>
    <package name="psysound" version="7.16">
				<install version="1.0">
          	<actions>
          			<!-- populate the environment variables from the dependend repos -->
          			<action type="set_environment_for_install">
          					<repository name="package_mcr_installer_7_16" owner="alveo">
						        		<package name="mcr_installer" version="7.16" />
						    		</repository>		
          			</action>
          			<!-- use env variables to set MACRROOT in run_pysound3Compiled.sh -->
          			<action type="shell_command">echo "MCRRoot=$MCRROOT"</action>
          	</actions>
        </install>
    </package>
</tool_dependency>