<tool id="alveo_item_list_downloader" name="Alveo Item List Downloader" version="0.01" force_history_refresh="True">
    <description>Import documents and metadata from the Alveo</description>
    <command interpreter="python">
        AlveoItemListDownloader.py --api_key $api_key --output $item_list
    </command>
    <inputs>
        <param name="api_key" type="text" size="30" label="API Key" help="Your Alveo API key"/>
        <param name="import_list" type="data" format="tabular" label="Imported Alveo Item List" help=""/>

        <param name="item_list" type="select" label="Alveo Item List" help="The Alveo Item List you wish to import">
                <options from_dataset="import_list">
                    <column name="name" index="0"/>
                    <column name="value" index="1"/>
                </options>
        </param>

        <param name="job_name" type="text" size="25"
               label="Supply a name for the outputs to remind you what they contain" value="Alveo Item Lists"/>

    </inputs>

    <outputs>
        <data format="json" name="item_list" label="${job_name}"/>
    </outputs>
    <options refresh="True"/>
    <help>
        <![CDATA[

Downloads Imported Item Lists from Alveo

]]>

    </help>
</tool>

